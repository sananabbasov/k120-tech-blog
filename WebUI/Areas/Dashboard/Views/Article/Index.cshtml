@model List<Article>


  <!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
            <a href="/dashboard/article/create">Create article</a>
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Photo</th>
                            <th>ViewCount</th>
                            <th>Category</th>
                            <th>CreatedDate</th>
                            <th>UpdateDate</th>
                            <th>Actions</th>
                          
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                             <th>Title</th>
                            <th>Photo</th>
                            <th>ViewCount</th>
                            <th>Category</th>
                            <th>CreatedDate</th>
                            <th>UpdateDate</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>

                    @foreach(var article in Model) 
                    {
                        <tr>
                            <td>@article.Title</td>
                            <td>
                                <img src="@article.PhotoUrl" width="100" height= "100"/>
                            </td>
                            <td>@article.ViewCount</td>
                            <td>@article.Category.Name</td>
                            <td>@article.CreatedDate.ToShortDateString()</td>
                            <td>@article.UpdateDate.ToShortDateString()</td>
                            <td>
                                <a class="btn btn-warning" href="/dashboard/article/edit/@article.Id">Update</a>
                                <a class="btn btn-danger" href="/dashboard/article/delete/@article.Id">Delete</a>
                            </td>
                          
                        </tr>
                    }

                      
                   
                   
                  
                     
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->