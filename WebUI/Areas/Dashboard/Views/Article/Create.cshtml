<form method="post" enctype='multipart/form-data'>
    <div class="form-group">
     <input type="text" name="Title" class="form-control col-6 mr-3" placeholder="Article name"/>
    </div>

    <div class="form-group">
      <input type="file" name="photo" class="form-control col-6 mr-3" placeholder="Photo Url"/>
    </div>

    <div class="form-group">
        <textarea id="editor" name="Description"></textarea>
    </div>  

    <div class="form-group">
        <label for="test">Navbar</label>
        <input type="checkbox" name="IsNavbar" class="" id="test" />
    </div>    

    <div class="form-group">
        <label for="test1">Featured</label>
        <input type="checkbox" name="IsFeatured" class="" id="test1" />
    </div>    
  
    <div class="form-group">
    <label for="exampleFormControlSelect1">Categories</label>
    <select name="CategoryId" asp-items="@ViewBag.Categories" class="form-control col-6" id="exampleFormControlSelect1">
    </select>
  </div>

    <input type="submit" value="Create"  class="btn btn-primary"/>
</form>


@section Scripts {

 <script src="https://cdn.ckeditor.com/ckeditor5/41.3.1/classic/ckeditor.js"></script>

<script>
var KTCkeditorDocument = function () {
    // Private functions
    var demo = function () {
        ClassicEditor
            .create( document.querySelector( '#editor' ),{
                    mediaEmbed: {
                        previewsInData:true
                    },
                }
             )
            .then( editor => {
                // console.log( editor );
            } )
            .catch( error => {
                // console.error( error );
                Swal.fire("Info !", error, "error");
            } );
    }

    return {
        // public functions
        init: function() {
            demo();
        }
    };
}();

jQuery(document).ready(function() {
    KTCkeditorDocument.init();
});
  </script>
}
